<%- include('../partials/_head') %> 

<body>
    
    <h1 class="headers">Edit Animal</h1>

    <% if (typeof error !== 'undefined') { %> 
        <span> <%= error %> </span>
        <% } %> 

        
        <form action="/animals/<%= animal._id %>?_method=PUT" method="POST">
            <div class="form-group row groupwidth">
              <label for="name" class="col-sm-2 col-form-label">Name</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" value="<%= animal.name %>">
              </div>
            </div>
            <div class="form-group row groupwidth">
              <label for="age" class="col-sm-2 col-form-label">Age</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" id="age" name="age" value="<%= animal.age %>">
              </div>
            </div>
            <div class="form-group row groupwidth">
                <label for="description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="description" name="description" value="<%= animal.description %>">
                </div>
              </div>
              <div class="form-group row groupwidth">
                <label for="image" class="col-sm-2 col-form-label">Add Image URL</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="image" name="image" value="<%= animal.image %>">
                </div>
              </div>
              <input type="submit" value="Update animal" class="btn btn-large whitebtn" id="inputeditbtn%">

<%- include('../partials/_footer') %> 