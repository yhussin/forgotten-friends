<%- include('../partials/_head') %> 

<h1 class="friendsheader">Our Friends!</h1>
<div class="container">
  <div class="row">

    <% animals.forEach((animal) => { %>
      <div class="card col-lg-4">
        <a href="/animals/<%= animal._id %>">
        <%= animal.name %> 
        </a>
        
    <img src="<%= animal.image %>" alt="animal picture">
    <p><a class="btn btn-secondary" href="#" role="button" id="buttonforanimals">View me! &raquo;</a></p>
      </div>
   <% }) %>
  </div>
</div>


